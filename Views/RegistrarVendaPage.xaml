<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleDeDoces.Views.RegistrarVendaPage">

	<VerticalStackLayout Padding="20" Spacing="15">
		<Label Text="Registrar Venda"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

		<Entry x:Name="customerNameEntry"
               Placeholder="Nome do Cliente" />
		<Entry x:Name="customerPhoneEntry"
               Placeholder="Telefone do Cliente"
               Keyboard="Telephone" />

		<Picker x:Name="productPicker"
                Title="Selecione o Produto" />

		<Entry x:Name="quantityEntry"
               Placeholder="Quantidade"
               Keyboard="Numeric" />

		<Button Text="Registrar"
                Clicked="OnRegistrarClicked" />
	</VerticalStackLayout>
</ContentPage>
