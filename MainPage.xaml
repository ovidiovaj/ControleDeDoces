<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleDeDoces.MainPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Controle de Doces"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Cadastrar Produto"
                FontSize="18"
                Clicked="OnCadastrarProdutoClicked" />

        <Button Text="Registrar Venda"
                FontSize="18"
                Clicked="OnRegistrarVendaClicked" />

        <Button Text="Consultar Vendas"
                FontSize="18"
                Clicked="OnConsultarVendasClicked" />
    </VerticalStackLayout>
</ContentPage>
